<h1>Borrowed Books</h1>

<% if @borrows.any? %>
  <table>
    <thead>
      <tr>
        <th>Book</th>
        <th>Return Status</th>
        <!-- Add other columns as needed -->
      </tr>
    </thead>
    <tbody>
      <% @borrows.each do |borrow| %>
        <tr>
          <td><%= borrow.book.name %></td>
          <td><%= borrow.return_book ? 'Returned' : 'Not Returned' %></td>
          <!-- Add other columns as needed -->
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No books borrowed yet.</p>
<% end %>
